@{
    ViewData["Title"] = "Dojodachi!";
}
<p>Fullness: @ViewBag.myDojodachi.fullness</p>
<p>Happiness: @ViewBag.myDojodachi.happiness</p>
<p>Meals: @ViewBag.myDojodachi.meals</p>
<p>Energy: @ViewBag.myDojodachi.energy</p>



<body>
    @{
        @if(@ViewBag.myDojodachi.fullness >= 100 && @ViewBag.myDojodachi.happiness >= 100 && @ViewBag.myDojodachi.energy >= 100)
        {
            <div>
                <p>Congratulations! You won!</p>
                <form action="restart" method="POST">
                    <input type="submit" value="Restart?">
                </form>
            </div>
        }
        else if(@ViewBag.myDojodachi.fullness == 0 || @ViewBag.myDojodachi.happiness == 0)
        {
            <div>
                <p>Your Dojodachi has passed away...</p>
                <form action="restart" method="POST">
                    <input type="submit" value="Restart?">
                </form>
            </div>
        }
        else
        {
    <div>
        <p>@ViewBag.message</p>
        <form action="feed" method="POST">
            <input type="submit" value="Feed">
        </form>
        <form action="play" method="POST">
            <input type="submit" value="Play">
        </form>
        <form action="work" method="POST">
            <input type="submit" value="Work">
        </form>
        <form action="sleep" method="POST">
            <input type="submit" value="Sleep">
        </form>
    </div>
        }
    }
</body>